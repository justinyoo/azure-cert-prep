<header class="app-header">
  <section class="banner">
    <!-- http://daverupert.com/2015/12/intrinsic-placeholders-with-picture/ -->
    <div class="placeholder"></div>
    <img
      class="banner-small"
      data-src="<%- url_for(theme.banner_large)%>"
      src="<%- url_for(theme.banner_small) %>"
      alt="banner"
    >
  </section>

  <section class="description">
    <img class="avatar" src="<%- url_for(theme.avatar) %>" alt="avatar" />
    <h1 class="title"> <%- theme.title %> </h1>
    <h3 class="subtitle"> <%- theme.subtitle %> </h3>
  </section>

  <ul class="social-list">
    <% if (theme.social.twitter){ %><a href="https://twitter.com/<%- theme.social.twitter %>" target="_blank">Twitter</a><% } %>
    <% if (theme.social.github){ %><a href="https://github.com/<%- theme.social.github %>" target="_blank">GitHub</a><% } %>
    <% if (theme.social.weibo){ %><a href="<%- theme.social.weibo %>" target="_blank">Weibo</a><% } %>
  </ul>
</header>
